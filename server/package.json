{
    "name": "kiwituri-server",
    "version": "1.0.0",
    "description": "",
    "main": "src/server.js",
    "scripts": {
        "clean": "node ./node_modules/rimraf/bin.js dist",
        "copy-ui": "cd ../ui/dist && copyfiles **/*.* ../../server/dist/ui",
        "compile": "node ./node_modules/typescript/lib/tsc.js",
        "build": "npm run clean && npm run compile && npm run copy-ui",
        "build-ui": "cd ../ui && npm run build-prod",
        "build-full": "npm run build-ui && npm run build",
        "start": "node dist/server.js",
        "s": "npm run build && npm start",
        "deploy": "npm run build && eb deploy",
        "deploy-full": "npm run build-full && eb deploy",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/elcsiga/kiwituri.git"
    },
    "author": "elcsiga",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/elcsiga/kiwituri/issues"
    },
    "homepage": "https://github.com/elcsiga/kiwituri#readme",
    "dependencies": {
        "@types/cors": "^2.8.4",
        "@types/express": "^4.16.0",
        "@types/aws-sdk": "^2.7.0",
        "@types/node": "^10.12.18",
        "@types/multer": "^1.3.7",
        "@types/multer-s3": "^2.3.2",
        "@types/mysql": "^2.15.5",
        "@types/passport": "^1.0.0",
        "body-parser": "^1.18.3",
        "cors": "^2.8.4",
        "express": "^4.16.3",
        "express-session": "^1.15.6",
        "multer": "^1.4.1",
        "multer-s3-transform": "^2.3.2",
        "mysql": "^2.16.0",
        "passport": "^0.4.0",
        "passport-local": "^1.0.0",
        "sharp": "^0.21.3",
        "uuid": "^3.3.2",
        "aws-sdk": "^2.382.0"
    },
    "devDependencies": {
        "copyfiles": "^2.1.0",
        "rimraf": "^2.6.3",
        "typescript": "^3.0.3"
    }
}
